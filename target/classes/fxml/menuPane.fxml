<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.damkis1.mp3player.controller.MenuPaneController">
    <MenuBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
            <Menu mnemonicParsing="false" text="Plik">
                <items>
                    <MenuItem fx:id="fileMenuItem" mnemonicParsing="false" text="Otwórz plik" />
                    <MenuItem fx:id="dirMenuItem" mnemonicParsing="false" text="Otwórz folder" />
                    <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Zamknij" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Pomoc">
                <items>
                    <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="O programie" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
</AnchorPane>
