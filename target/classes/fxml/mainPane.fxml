<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.damkis1.mp3player.controller.MainController">
   <top>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Plik">
                  <items>
                    <MenuItem fx:id="fileMenuItem" mnemonicParsing="false" text="Otwórz plik" />
                        <MenuItem fx:id="dirMenuItem" mnemonicParsing="false" text="Otwórz folder" />
                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Zamknij" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Pomoc">
                  <items>
                    <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="O programie" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children></AnchorPane>
   </top>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <TableView prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn prefWidth="75.0" text="C1" />
                <TableColumn prefWidth="75.0" text="C2" />
              </columns>
            </TableView>
         </children></AnchorPane>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="previousButton" mnemonicParsing="false" text="Button" />
            <ToggleButton fx:id="playButton" mnemonicParsing="false" text="ToggleButton" />
            <Button fx:id="nextButton" mnemonicParsing="false" text="Button" />
            <Slider fx:id="volumeSlider" />
            <Slider fx:id="progressSlider" />
         </children></HBox>
   </bottom>
</BorderPane>
